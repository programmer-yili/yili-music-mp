<y-navigator title="歌单详情"></y-navigator>
<view class="page">
  <header-background />
  <view class="header">
    <image mode="aspectFill" class="cover" src="{{ detail.cover.uri || '../../images/playlist-cover.svg' }}"></image>
    <view class="name">{{ detail.name }}</view>
    <view class="description">{{ detail.description }}</view>
  </view>

  <view class="action-area">
    <y-button width="442rpx">播放</y-button>
    <y-button type="info" icon="save"></y-button>
  </view>

  <view class="music-list">
    <music-list likeable list="{{ detail.musicList }}"/>
  </view>
</view>